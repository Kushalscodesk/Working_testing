<%if user_signed_in?%>
  <h1>Friends</h1>

  <table class="table table-striped table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id ="result_table">

     <%= render 'result', friend: @friend %>

    </tbody>
  </table>

  <br>
  <div id="new-friend">
    <%= link_to 'New Friend', new_friend_path, class:"btn btn-dark", remote: true %>
  </div>
  
<%else%>
  <h1>Home#index</h1>
  <p>my first rails index page</p>

<%end%>